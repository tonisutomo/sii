<plugin name='spring-security-ldap' version='2.0-RC2' grailsVersion='2.0.0 &gt; *'>
  <author>Burt Beckwith</author>
  <authorEmail>burt@burtbeckwith.com</authorEmail>
  <title>LDAP authentication support for the Spring Security plugin.</title>
  <description>LDAP authentication support for the Spring Security plugin.</description>
  <documentation>http://grails.org/plugin/spring-security-ldap</documentation>
  <type>SpringSecurityLdapGrailsPlugin</type>
  <resources>
    <resource>DefaultLdapSecurityConfig</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
    <repository name='http://repo.spring.io/milestone' url='http://repo.spring.io/milestone/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.springframework.security' name='spring-security-ldap' version='3.2.0.RC1' />
    </compile>
    <runtime>
      <dependency group='org.springframework.ldap' name='spring-ldap-core' version='1.3.2.RELEASE' />
    </runtime>
  </dependencies>
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='spring-security-core' version='2.0-RC2' />
    </compile>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>